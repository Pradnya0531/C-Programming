#include<stdio.h>
int main()
{
   
    char cChar = 'A';                                                         // Range : [-127 to +127]
    signed char scChar = 'B';                                                 // Range : [-127 to +127]
    unsigned char ucChar = 'V';                                               // Range : [0 to 255]




    int iValue = 10;                                                         // Range : [-32,768,+32,767]
    short int isecValue = 1000;                                              // Range : [-32,768 to 32,767]
    long int lIntValue = 1000;                                               // Range : [-2,147,483,648 to 2,147,483,647]


    float fValue = 1.1;

    double dValue = 1;
    long double LdValue = 11.11;

    printf("***Character***\n");
    printf("Stored Data In cChar is : %c\n",cChar);
    printf("Address of cChar Is : %u\n",cChar);                                 // a To z : 97 to 122  / A To Z : 65 to 90
    printf("Storage size for cChar : %d\n\n",sizeof(cChar));
    printf("Address of cChar Is : %d\n" ,&cChar);
    printf("******************************************\n\n");

    printf("***Signed Character***\n");
    printf("Stored Data in scChar : %c\n",scChar);
    printf("Address of scChar Is : %u\n",scChar);
    printf("Storage size for scChar: %d\n\n",sizeof(scChar));
    printf("Address of scChar Is : %d\n",&scChar);
    printf("*****************************************\n\n");

    printf("***Unsigned Character***\n");
    printf("Stored Data in ucChar : %c\n",ucChar);
    printf("Address of ucChar Is : %u\n",ucChar);
    printf("Storage size for ucChar: %u\n\n",sizeof(ucChar));
    printf("Address of ucChar Is : %d\n",&ucChar);
    printf("*****************************************\n\n");

    printf("***Integer***\n");
    printf("Stored Data in iValue is : %d\n",iValue);
    printf("Address of iValue Is: %u\n",iValue);
    printf("Storage size for iValue : %d\n\n",sizeof(iValue));
    printf("Address of iValue Is : %d\n",&iValue);
    printf("*****************************************\n\n");

    printf("***Long Integer***\n");
    printf("Stored Data in lIntValue is : %d",lIntValue);
    printf("Address of lIntValue Is : %d\n",lIntValue);
    printf("Storage Size for lIntValue : %d\n\n",sizeof(lIntValue));
    printf("Address of lIntValue Is: %d\n",&lIntValue);
    printf("*****************************************\n\n");

    printf("***Float***\n");
    printf("Stored Data in fValue is :%f\n",fValue);
    printf("Address of fValue Is :%u\n",fValue);
    printf("Storage size for fValue : %d\n\n",sizeof(fValue));
    printf("Address of fValue Is : %d\n",&fValue);
    printf("****************************************\n\n");
   
    printf("***Double***\n");
    printf("Stored Data in dValue is : %lf\n",dValue);
    printf("Address of dValue Is : %u\n",dValue);
    printf("Storage size for dValue : %d\n",sizeof(dValue));
    printf("Address of dValue Is : %d\n",&dValue);
    printf("****************************************\n\n");
   
    printf("***Long Double***\n");
    printf("Stored Data in LdValue is : %LF\n",LdValue);
    printf("Address of LdValue Is : %u\n",LdValue);
    printf("Storage size for LdValue : %d\n\n",sizeof(LdValue));
    printf("Address of LdValue Is : %d\n",&LdValue);
    printf("****************************************\n\n");

    
return 0;
}
